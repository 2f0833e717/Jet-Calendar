	"https://accounts.google.com/o/oauth2/token"
    ],
	 "web_accessible_resources": [
    "setEvent.html","images/screen.png","oauth2/oauth2.html"
  ],
      "content_scripts":[{
        "matches":["http://www.google.com/robots.txt*"],
        "js":["oauth2/oauth2_inject.js"],
        "run_at":"document_start"
    }],
    "version":"2.9",
	"manifest_version": 2
}

